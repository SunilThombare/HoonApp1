<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/login_activity_vertical_margin"
    android:paddingLeft="@dimen/login_activity_horizontal_margin"
    android:paddingRight="@dimen/login_activity_horizontal_margin"
    android:paddingTop="@dimen/login_activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#32cd32"><!--32cd32-->

    <FrameLayout
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="E-mail"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:maxLength="20"
            android:paddingBottom="16dp"
            android:paddingStart="48dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp">
        </EditText>

        <ImageView
            android:id="@+id/prefix"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_mail_white_24dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_PW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:singleLine="true"
            android:hint="Password"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:labelFor="@+id/editText"
            android:maxLength="12"
            android:paddingBottom="16dp"
            android:paddingStart="48dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp" >
        </EditText>

        <ImageView
            android:id="@+id/prefix2"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_lock_white_24dp"/>
    </FrameLayout>


    <!--<CheckBox
        android:id="@+id/Auto_LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_PW"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="자동 로그인" />-->

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:onClick="onClickLogin" />
    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:onClick="onClickSignup" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="이메일 / 비밀번호 찾기"
        android:textSize="12dp"
        android:textColor="#ffffff"
        />


</LinearLayout>
