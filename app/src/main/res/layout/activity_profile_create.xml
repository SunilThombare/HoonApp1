<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            style="@style/titleTextStyle"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"
            android:text="- 본인 프로필을 정확기 기재해 주세요."
            android:lineSpacingExtra="10dp"
            style="@style/editTextTextStyle"/>
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/inputNickNmae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="앱에서 사용하는 별명입니다."
                style="@style/editTextTextStyle"
                android:maxLength="20"
                android:paddingBottom="16dp"
                android:paddingStart="56dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp">
                <requestFocus/>
            </EditText>

            <TextView
                android:id="@+id/prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center_vertical"
                android:text="닉네임"
                style="@style/labelTextStyle"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/inputArea1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:singleLine="true"
                android:hint="지역선택"
                style="@style/editTextTextStyle"
                android:labelFor="@+id/editText"
                android:maxLength="12"
                android:paddingBottom="16dp"
                android:paddingStart="56dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:onClick="onClickArea1Btn">
            </EditText>

            <TextView
                android:id="@+id/prefix6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center_vertical"
                android:text="지역"
                style="@style/labelTextStyle"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/inputJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:editable="false"
                android:hint="직업.분야를 선택하세요."
                style="@style/editTextTextStyle"
                android:labelFor="@+id/editText"
                android:paddingBottom="16dp"
                android:paddingStart="96dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:onClick="onClickJob">
            </EditText>

            <TextView
                android:id="@+id/prefix2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center_vertical"
                android:text="직업.분야"
                style="@style/labelTextStyle"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/inputHobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:editable="false"
                android:hint="평소 즐겨하는 것을 선택하세요."
                style="@style/editTextTextStyle"
                android:labelFor="@+id/editText"
                android:paddingBottom="16dp"
                android:paddingStart="56dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:onClick="onClickHobby">
            </EditText>

            <TextView
                android:id="@+id/prefix9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center_vertical"
                android:text="취미"
                style="@style/labelTextStyle"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/inputCharacter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="2개이상 선택하세요."
                style="@style/editTextTextStyle"
                android:labelFor="@+id/editText"
                android:paddingBottom="16dp"
                android:paddingStart="56dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:onClick="onClickCharacter">
            </EditText>

            <TextView
                android:id="@+id/prefix8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center_vertical"
                android:text="성격"
                style="@style/labelTextStyle"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="8dp"
                >
                <EditText
                    android:id="@+id/inputBloodtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:singleLine="true"
                    android:hint="선택하세요."
                    style="@style/editTextTextStyle"
                    android:labelFor="@+id/editText"
                    android:maxLength="12"
                    android:paddingBottom="16dp"
                    android:paddingStart="56dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:onClick="onClickBloodTypeBtn">
                </EditText>

                <TextView
                    android:id="@+id/prefix3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="혈액형"
                    style="@style/labelTextStyle"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/inputReligion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:singleLine="true"
                    android:hint="선택하세요."
                    style="@style/editTextTextStyle"
                    android:labelFor="@+id/editText"
                    android:maxLength="12"
                    android:paddingBottom="16dp"
                    android:paddingStart="56dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:onClick="onClickReligionBtn">
                </EditText>

                <TextView
                    android:id="@+id/prefix4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="종교"
                    style="@style/labelTextStyle"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="8dp">
                <EditText
                    android:id="@+id/inputHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:singleLine="true"
                    android:hint="선택하세요."
                    style="@style/editTextTextStyle"
                    android:labelFor="@+id/editText"
                    android:maxLength="12"
                    android:paddingBottom="16dp"
                    android:paddingStart="56dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:onClick="onClickHeight">
                </EditText>

                <TextView
                    android:id="@+id/prefix5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="신장"
                    style="@style/labelTextStyle"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <EditText
                    android:id="@+id/inputBodyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:singleLine="true"
                    android:hint="선택하세요."
                    style="@style/editTextTextStyle"
                    android:labelFor="@+id/editText"
                    android:maxLength="12"
                    android:paddingBottom="16dp"
                    android:paddingStart="56dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:onClick="onClickBodyType">
                </EditText>

                <TextView
                    android:id="@+id/prefix7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="체형"
                    style="@style/labelTextStyle"/>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="저장하기"
            android:onClick="onClickSaveBtn" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
